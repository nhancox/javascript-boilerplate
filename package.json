{
  "name": "javascript-boilerplate",
  "description": "Boilerplate for JavaScript projects with linters, formatters and Git hooks",
  "homepage": "https://github.com/nhancox/javascript-boilerplate",
  "bugs": {
    "url": "https://github.com/nhancox/javascript-boilerplate/issues"
  },
  "license": "GPL-3.0-only",
  "author": {
    "name": "Nicholas Hancox",
    "url": "https://www.nicholashancox.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nhancox/javascript-boilerplate.git"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "type": "module",
  "scripts": {
    "lint:all": "npm run lint:all:prettier && npm run lint:all:eslint && npm run lint:all:markdownlint",
    "lint:all:eslint": "eslint --ext .cjs,.js,.mjs --fix .",
    "lint:all:markdownlint": "markdownlint --fix --ignore node_modules '**/*.md'",
    "lint:all:prettier": "prettier --write .",
    "lint:eslint": "eslint --fix",
    "lint:markdownlint": "markdownlint --fix",
    "lint:prettier": "prettier --write"
  },
  "dependencies": {},
  "devDependencies": {
    "eslint": "^8.4.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-node": "^11.1.0",
    "markdownlint-cli": "^0.30.0",
    "prettier": "2.5.1",
    "prettier-eslint": "^13.0.0"
  }
}
